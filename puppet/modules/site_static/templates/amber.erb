<%- if @location_path != '' -%>
  AliasMatch ^/[a-z]{2}/<%=@location_path%>(/.+|/|)$ "<%=@directory%>/$1"
  Alias /<%=@location_path%> "<%=@directory%>/"
<%- end -%>
  <Directory "<%=@directory%>/">
    AllowOverride FileInfo Indexes Options=All,MultiViews
<% if scope.function_guess_apache_version([]) == '2.4' %>
    Require all granted
<% else %>
    Order deny,allow
    Allow from all
<% end %>
  </Directory>
